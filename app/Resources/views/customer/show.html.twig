        </tbody>
    </table>

            <a class="btn btn-primary" href="{{ path('admin_customer_edit', { 'id': customer.id }) }}">Editer</a>
            <a class="btn btn-default" href="{{ path('admin_customer_index') }}">Retour</a>
        <li>
            {{ form_start(delete_form) }}

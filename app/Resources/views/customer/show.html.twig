{% extends 'back.html.twig' %}

{% block content %}
    <h5>Client</h5>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ customer.username }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Registrationdate</th>
                <td>{{ customer.registrationDate|date('Y-m-d') }}</td>
            </tr>
            <tr>

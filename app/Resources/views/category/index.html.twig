{% extends 'back.html.twig' %}

{% block content %}



    <h5>Liste des categories </h5>
 <div class="pull-right">
<a class=" btn btn-success" href="{{ path('admin_category_new') }}"> <i class="fa fa-plus"></i>Nouvelle Category</a>

 </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td nowrap="nowrap">{{ category.libelle }}</td>
                <td nowrap="nowrap">{{ category.slug }}</td>
                <td>{{ category.description | slice(0, 80) }} ...</td>
                <td>{% if category.createAt %}{{ category.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if category.updateAt %}{{ category.updateAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    
                      
 <a class="btn btn-info" href="{{ path('admin_category_show', { 'id': category.id }) }}"><i class="fa fa-search"></i></a>
               
                       
 <a class="btn btn-warning"href="{{ path('admin_category_edit', { 'id': category.id }) }}"><i class="fa fa-edit"></i></a>
                      
                  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    
{% endblock %}



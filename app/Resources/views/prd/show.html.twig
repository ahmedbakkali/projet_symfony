{% extends 'back.html.twig' %}

{% block content %}
    <h3>{{ 'Produit'|trans }}</h3>

    <table class="record_properties table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prd.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ prd.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prd.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ prd.price }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ prd.quantity }}</td>
            </tr>

            <tr>
                <th>datepublish</th>
                <td>{% if prd.datepublish %}{{ prd.datepublish|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads/prd/' ~ prd.image) }}" width="50px" alt=""></td>
            </tr>
        </tbody>
    </table>
        <a class="btn btn-primary" href="{{ path('admin_prd_edit', { 'id': prd.id }) }}">Editer</a>
        <a class="btn btn-default" href="{{ path('admin_prd_index') }}">Retour</a>
        
        <li>
            {{ form_start(delete_form) }}
                <input class="btn btn-danger" type="submit" value="Supprimer">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

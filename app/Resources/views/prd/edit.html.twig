{% extends 'back.html.twig' %}

{% block content %}
    <h3>Product Create</h3>
 {{ form_start(edit_form) }}

<div class="row">
    <div class="col-md-8">

        <div class="form-group">
            {{ form_row(edit_form.name, {'attr': {'class': 'form-control'}}) }}
        </div>


       <div class="form-group">
            {{ form_row(edit_form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

       <div class="form-group">
            {{ form_row(edit_form.price, {'attr': {'class': 'form-control'}}) }}
        </div> 

        <div class="form-group">
            {{ form_row(edit_form.quantity, {'attr': {'class': 'form-control'}}) }}
        </div> 

    </div>
    <div class="col-md-4">
        <div class="form-group">
            {{ form_row(edit_form.image, {'attr': {'class': 'form-control'}}) }}
        </div> 
      

        <div class="form-group">
            {{ form_row(edit_form.categories, {'attr': {'class': 'form-control'}}) }}
        </div> 
         <input class="btn btn-danger"  type="submit" value="Edit"  />
   
            <a class="btn btn-default" href="{{ path('admin_prd_index') }}">Retour</a>
    </div>
</div>
    
       


    {{ form_end(edit_form) }}

   
{% endblock %}

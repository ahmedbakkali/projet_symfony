{% extends 'base.html.twig' %}

{% block body %}
    <h1>Registre</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ registre.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ registre.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ registre.email }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ registre.number }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('registre_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('registre_edit', { 'id': registre.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
